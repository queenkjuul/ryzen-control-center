{
  "name": "ryzen-control-center",
  "version": "0.1.0",
  "description": "Quick and dirty RyzenAdj GUI for Linux",
  "main": "./out/main/index.js",
  "author": "https://github.com/queenkjuul",
  "homepage": "https://github.com/queenkjuul/ryzen-control-center",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "genversion": "genversion --esm src/version.js",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "npm run genversion && electron-vite dev -w",
    "build": "npm run genversion && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run genversion && electron-vite build && electron-builder --linux",
    "test": "vitest src/test"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "daisyui": "^5.0.50",
    "electron-settings": "^4.0.4",
    "electron-updater": "^6.3.9",
    "sudo-prompt": "^9.2.1",
    "tailwindcss": "^4.1.11",
    "tslog": "^4.9.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "genversion": "^3.2.0",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  }
}
