{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/types/**/*",
    "src/version.js"
  ],
  "exclude": ["out/**/*"],
  "compilerOptions": {
    "outDir": "out/renderer",
    "composite": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "/@renderer/*": [
        "src/renderer/src/*"
      ],
      "/@components*": [
        "src/renderer/src/components/*"
      ],
      "/@lib/*": [
        "src/renderer/src/lib/*"
      ],
      "/@assets/*": [
        "src/renderer/assets/*"
      ],
      "/@types/*": [
        "src/types/*"
      ],
      "/@test/*": [
        "src/test/*"
      ],
    }
  }
}
