{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*", 
    "src/types/**/*", 
    "src/main/**/*", 
    "src/preload/**/*", 
    "src/test/**/*", 
    "src/version.js"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "paths": {
      "/@/*": ["./src/*"],
      "/@res/*": ["./resources/*"],
      "/@config/*": ["./src/config/*"],
      "/@types/*": ["./src/types/*"],
      "/@test/*": ["./src/test/*"]
    },
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "bundler"
  }
}
