{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/types/**/*", "src/main/**/*", "src/preload/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "paths": {
      "/@/*": ["./src/*"],
      "/@res/*": ["./resources/*"],
      "/@types/*": ["./src/types/*"]
    }
  }
}
